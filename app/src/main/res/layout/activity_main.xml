<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_LBL_enterpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter password"
        android:layout_marginTop="250dp"
        android:layout_alignLeft="@id/main_TXTF_pass"
        android:textStyle="bold"/>



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/main_TXTF_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/main_LBL_enterpass"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/main_BTN_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_below="@id/main_TXTF_pass"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/main_LBL_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_below="@id/main_BTN_enter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="24dp"
        android:textStyle="bold"
        />


</RelativeLayout>